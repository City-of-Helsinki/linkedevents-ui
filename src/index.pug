doctype
html.no-js
    head
        meta(charset='UTF-8')
        meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(name='title' content='Linkedevents-UI - Turun kaupungin tapahtumatietokanta')
        meta(name='description' content='Linkedevents-UI on käyttöliittymä tapahtumien luomiseen ja muuttamiseen Linked Events rajapinnassa.')
        meta(name='keywords' content='linkedevents-ui, linkedevents, linked, events, tapahtumarajapinta, tapahtumakalenteri, event, calendar')
        - var instanceName = ui_mode === 'courses' ? 'Linked Courses' : 'Linked Events'
        title #{instanceName} UI
        script(type='text/javascript').
            window.appSettings = !{configJson};
        // Matomo
        script(type='text/javascript').
            var _paq = window._paq || [];
            /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
            var u="https://testivaraamo.turku.fi:8003/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '5']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
            })();

    body
        if APP_MODE == 'testing'
            #testingmessage
                | Huom! Tämä on testiversio.
        div(style={height: '100%'})
            #content
        if APP_MODE == 'development'
            script(src="/scripts/main.js" type="text/javascript")

