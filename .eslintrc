{
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "globals": {
      "_": true,
      "appSettings": true
    },
    "rules": {
      "no-console": "off",
      "comma-dangle": [2, "always-multiline"],
      "eol-last": [2, "always"],
      "indent": [2, 4, {"SwitchCase":1}],
      "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
      "object-curly-spacing": [2, "never"],
      "space-infix-ops": "error",
      "import/no-unresolved": 0,
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2,
      "no-unused-vars": 0,
      "no-useless-escape": 0,
      "react/no-string-refs": 0
      },
    "env": {
      "amd": true,
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
